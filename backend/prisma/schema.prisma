generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserType {
  ADMIN
  VOLUNTEER
  DRIVER
}

model User {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  username      String?
  tempId        String?
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  type          UserType?
  Ambulance     Ambulance[]
  VolunteerTask VolunteerTask[]
}

model Food {
  id       Int    @id @default(autoincrement())
  name     String
  quantity Float
  unit     String
}

model Task {
  id            Int             @id @default(autoincrement())
  name          String
  urgency       Int
  isCompleted   Boolean         @default(false)
  longitude     Float
  latitude      Float
  VolunteerTask VolunteerTask[]
}

model VolunteerTask {
  id     Int   @id @default(autoincrement())
  userId Int?
  user   User? @relation(fields: [userId], references: [id])
  taskId Int
  task   Task  @relation(fields: [taskId], references: [id])
}

model Shelter {
  id        Int   @id @default(autoincrement())
  longitude Float
  latitude  Float
  capacity  Int
}

model Ambulance {
  id          Int     @id @default(autoincrement())
  longitude   Float?
  latitude    Float?
  isAvailable Boolean
  driverId    Int
  driver      User    @relation(fields: [driverId], references: [id])
}

model DangerousPlace {
  id        Int        @id @default(autoincrement())
  longitude Float
  latitude  Float
  type      DangerType
  severity  Int
}

model DangerousArea {
  id        Int        @id @default(autoincrement())
  longitude Float
  latitude  Float
  type      DangerType
  severity  Int
  radius    Float
}

model Report {
  id        Int        @id @default(autoincrement())
  text      String
  longitude Float
  latitude  Float
  type      DangerType
}

enum DangerType {
  BOMBING
  TERRORIST_ATTACK
  EARTHQUAKE
  TSUNAMI
  TORNADO
  FAMINE
  ROAD_ACCIDENT
}
